<!DOCTYPE html>
<html>
    {% include 'head.html' %}
    <body>
        <div class='container'>
            <h1 class="header-copy"><img class="header-icon" src="/img/spacetrucker2.png"> MAIN DISPLAY <img class="header-icon" src="/img/spacetrucker.png"></h1>
            <hr>
            <br><br><br><br><br><br>
            <div class='row'>
                <div class='col-xs-5 col-xs-offset-1'>
                    <h3>{{ ship.getName }}:</h3>
                    <div class='row'>
                        <div class='col-xs-6 col-xs-offset-2 right'>
                            <p>Category</p>
                            <hr>
                            <p>Cargo Level</p>
                            <p>Fuel Level</p>
                            <p>Credits</p>
                            <p>Ship Location</p>
                            <p>Turns</p>
                        </div>
                        <div class='col-xs-4'>
                            <p>Status</p>
                            <hr>
                            <p>{{ ship.getCargoLoad }}/{{ ship.getCargoCapacity }}</p>
                            <p>{{ ship.getCurrentFuel }}/{{ ship.getFuelCapacity }}</p>
                            <p>{{ ship.getCredits }}</p>
                            <p>[{{ ship.getLocation[0] }}, {{ ship.getLocation[1] }}]</p>
                            <p>{{ ship.getTurn }}</p>
                        </div>
                    </div>
                </div>
                <div class='col-xs-6'>
                    <h3>Current Location:</h3>
                    <div>
                            {% if planet.getType == 1 %}

                                <div class='row'>
                                    <div class='col-xs-6 col-xs-offset-2 right'>
                                        <p>Category</p>
                                        <hr>
                                        <p>Location Type</p>
                                        <p>Planet Name</p>
                                        <p>Planet Population</p>
                                    </div>
                                    <div class='col-xs-4'>
                                        <p>Status</p>
                                        <hr>
                                        <p>Agricultural<span class="glyphicon glyphicon-star planet-icon agricultural"></span></p>
                                        <p>{{ planet.getName }}</p>
                                        <p>
                                            {% if planet.getPopulation == 1 %}
                                                Low
                                                <span class="glyphicon glyphicon-user planet-icon"></span>
                                            {% elseif planet.getPopulation == 2 %}
                                                Medium
                                                <span class="glyphicon glyphicon-user planet-icon"></span><span class="glyphicon glyphicon-user planet-icon"></span>
                                            {% elseif planet.getPopulation == 3 %}
                                                High
                                                <span class="glyphicon glyphicon-user planet-icon"></span><span class="glyphicon glyphicon-user planet-icon"></span><span class="glyphicon glyphicon-user planet-icon"></span>
                                            {% else %}
                                            {% endif %}
                                        </p>
                                    </div>
                                </div>

                            {% elseif planet.getType == 2 %}

                                <div class='row'>
                                    <div class='col-xs-6 col-xs-offset-2 right'>
                                        <p>Category</p>
                                        <hr>
                                        <p>Location Type</p>
                                        <p>Planet Name</p>
                                        <p>Planet Population</p>
                                    </div>
                                    <div class='col-xs-4'>
                                        <p>Status</p>
                                        <hr>
                                        <p>Industrial<span class="glyphicon glyphicon-star planet-icon industrial"></span></p>
                                        <p>{{ planet.getName }}</p>
                                        <p>
                                            {% if planet.getPopulation == 1 %}
                                                Low
                                                <span class="glyphicon glyphicon-user planet-icon"></span>
                                            {% elseif planet.getPopulation == 2 %}
                                                Medium
                                                <span class="glyphicon glyphicon-user planet-icon"></span><span class="glyphicon glyphicon-user planet-icon"></span>
                                            {% elseif planet.getPopulation == 3 %}
                                                High
                                                <span class="glyphicon glyphicon-user planet-icon"></span><span class="glyphicon glyphicon-user planet-icon"></span><span class="glyphicon glyphicon-user planet-icon"></span>
                                            {% else %}
                                            {% endif %}
                                        </p>
                                    </div>
                                </div>

                            {% elseif planet.getType == 3 %}

                                <div class='row'>
                                    <div class='col-xs-6 col-xs-offset-2 right'>
                                        <p>Category</p>
                                        <hr>
                                        <p>Location Type</p>
                                        <p>Station Name</p>
                                    </div>
                                    <div class='col-xs-4'>
                                        <p>Status</p>
                                        <hr>
                                        <p>Fuel Station<span class="glyphicon glyphicon-tint planet-icon"></p>
                                        <p>{{ planet.getName }}</p>
                                    </div>
                                </div>

                            {% else %}

                            <div class='row'>
                                <div class='col-xs-6 col-xs-offset-2 right'>
                                    <p>Category</p>
                                    <hr>
                                    <p>Location Type</p>
                                </div>
                                <div class='col-xs-4'>
                                    <p>Status</p>
                                    <hr>
                                    <p>Empty Space</p>
                                </div>
                            </div>
                            {% endif %}
                        </p>
                    </div>
                </div>
            </div>
            <br><br><br><br><br><br><br><br>

            <div class='row'>
                <div class='col-xs-4'>
                    <form action='/navigation/{{ship.getId}}' >
                        <button class='btn form-control btn-success btn_main' type='submit'>NAVIGATE</button>
                    </form>
                </div>
                <div class='col-xs-4'>
                    {% if planet.getType == 0 %}
                        <button class='btn form-control btn-info btn_main btn_unclickable'>TRADE</button>
                    {% else %}
                        <form action='/trade/{{ship.getId}}' method='get'>
                            <button class='btn form-control btn-info btn_main' type='submit'>TRADE</button>
                        </form>
                    {% endif %}
                </div>
                <div class='col-xs-4'>
                    <form action='/wait_turn/{{ship.getId}}' >
                        <button class='btn form-control btn-warning btn_main' type='submit'>WAIT 1 TURN</button>
                    </form>
                </div>
            </div>

            <hr>
            <h5 class="footer-copy">GRENDL: General Robotics Engineering Navigation &amp; Direction Logic</h5>
        </div>
    </body>
</html>
